@model List<Mvc.Models.LichSuDatSanViewModel>

<h2>Lịch Sử Đặt Sân</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sân</th>
            <th>Giá (VNĐ/giờ)</th>
            <th>Mô tả</th>
            <th>Dịch vụ kèm theo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenSan</td>
                <td>@item.Gia.ToString("N0")</td>
                <td>@item.MoTa</td>
                <td>
                    @if (item.DichVuDatBongList != null && item.DichVuDatBongList.Any())
                    {
                        <ul>
                            @foreach (var dv in item.DichVuDatBongList)
                            {
                                <li>
                                    @if (!string.IsNullOrEmpty(dv.TenNuocUong)) {
                                        <strong>Nước uống:</strong> @dv.TenNuocUong <br />
                                        <strong>Số lượng:</strong> @dv.SoLuong <br />
                                    }
                                    @if (!string.IsNullOrEmpty(dv.TenDoThue)) {
                                        <strong>Đồ thuê:</strong> @dv.TenDoThue <br />
                                        <strong>Số lượng:</strong> @dv.SoLuongDoThue <br />
                                    }
                                    @if (!string.IsNullOrEmpty(dv.TenThueSan)) {
                                        <strong>Thuê sân:</strong> @dv.TenThueSan <br />
                                    }
                                 
                                    <strong>Tiền:</strong> @dv.TongTien.ToString("N0") VNĐ <br />
                                    @if (!string.IsNullOrEmpty(dv.GhiChu)) {
                                        <strong>Ghi chú:</strong> @dv.GhiChu
                                    }
                                </li>
                                <hr />
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Không có</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
