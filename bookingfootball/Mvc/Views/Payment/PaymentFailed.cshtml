@model Mvc.Services.VNPayLibrary.PaymentResponseModel
@{
    ViewData["Title"] = "Thanh Toán Thất Bại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .card-custom {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .highlight-title {
        font-weight: bold;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .btn-home {
        font-size: 1.2rem;
        padding: 10px 20px;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center highlight-title">Thanh Toán Thất Bại</h2>
    <div class="card card-custom p-4">
        <h4 class="highlight-title">Thông Tin Giao Dịch</h4>
        <p><strong>Mã Hóa Đơn:</strong> @Model.OrderId</p>
        <p><strong>Mã Giao Dịch VNPay:</strong> @Model.TransactionId</p>
        <p><strong>Mô Tả:</strong> @Model.OrderDescription</p>
        <p><strong>Lý Do:</strong> Mã lỗi VNPay: @Model.VnPayResponseCode</p>
        <div class="text-end mt-3">
            <a href="@Url.Action("Index", "SanBong")" class="btn btn-primary btn-home">Quay Về Trang Chủ</a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>